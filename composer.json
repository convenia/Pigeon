{
    "name": "convenia/pigeon",
    "license": "mit",
    "type": "library",
    "description": "",
    "keywords": ["pigeon", "rabbitmq", "laravel", "message", "queue"],
    "authors": [
        {
            "name": "Kauan Sousa",
            "email": "kauanslr.ks@gmail.com",
            "role": "Maintainer"
        },
        {
            "name": "Leonardo Lemos",
            "email": "leonardo.lemos@convenia.com.br",
            "role": "Maintainer"
        }
    ],
    "require": {
        "php": ">=7.3|>=8.1",
        "ext-json": "*",
        "ext-sockets": "*",
        "php-amqplib/php-amqplib": "^3.1",
        "laravel/framework": "^6.20.12|^7.30.4|^8.22.1|^9.2",
        "webpatser/laravel-uuid": "^4.0"
    },
    "require-dev": {
        "ext-curl": "*",
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6",
        "orchestra/testbench": "^4.18|^6.21",
        "mockery/mockery": "^1.3",
        "enlightn/security-checker": "^1.10",
        "nunomaduro/larastan": "^1.0",
        "phpmd/phpmd": "^2.12",
        "infection/infection": "^0.26.6"
    },
    "autoload": {
        "psr-4": {
            "Convenia\\Pigeon\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Convenia\\Pigeon\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "coverage": "./vendor/bin/phpunit --coverage-html ./.coverage",
        "phpcbf": "vendor/bin/phpcbf --standard=phpcs.xml --colors",
        "phpcs": "vendor/bin/phpcs --standard=phpcs.xml --colors",
        "phpmd": "./vendor/bin/phpmd src ansi ./ruleset.xml",
        "phpmetrics-html": "./vendor/bin/phpmetrics --report-html=/var/www/package/reports/phpmetrics app",
        "phpmetrics": "./vendor/bin/phpmetrics --report-json=/var/www/package/reports/phpmetrics.json app",
        "phpstan": "./vendor/bin/phpstan analyze",
        "security-checker": "vendor/bin/security-checker security:check ./composer.lock --format ansi",
        "test-ci": "XDEBUG_MODE=coverage ./vendor/bin/phpunit --coverage-text",
        "test": "./vendor/bin/phpunit",
        "static-analyse": [
            "@phpcs",
            "@phpmd",
            "@phpstan"
        ],
        "verify": [
            "@security-checker",
            "@static-analyse",
            "@test-ci"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "Convenia\\Pigeon\\PigeonServiceProvider"
            ],
            "aliases": {
                "Pigeon": "Convenia\\Pigeon\\Facade\\Pigeon"
            }
        }
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true
        }
    }
}
